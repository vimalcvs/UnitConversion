<resources>

    <style name="AppTheme" parent="Theme.Material3.DynamicColors.Dark">
        !-- Status bar color. -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="android:hardwareAccelerated">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrow</item>
        <item name="actionOverflowMenuStyle">@style/MyActionMenuOverflow</item>
    </style>
</resources>